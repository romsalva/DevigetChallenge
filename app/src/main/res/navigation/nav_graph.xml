<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/destination_post_list"
    >

    <fragment
        android:id="@+id/destination_post_list"
        android:name="com.deviget.reddiget.presentation.view.PostsFragment"
        android:label="@string/nav_label_post_list"
        >
        <action
            android:id="@+id/action_postsFragment_to_postFragment"
            app:destination="@id/destination_post"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            />
    </fragment>
    <fragment
        android:id="@+id/destination_post"
        android:name="com.deviget.reddiget.presentation.view.PostFragment"
        android:label="@string/nav_label_post"
        >
        <argument
            android:name="postId"
            app:argType="string"
            />
    </fragment>
</navigation>