<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reddiget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorPrimaryVariant">@color/red_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Widget.Reddiget.Dismiss" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">@dimen/size_widget_small</item>
        <item name="android:minWidth">@dimen/size_widget_small</item>
    </style>

    <style name="Widget.Reddiget.ActionButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="TextAppearance.Reddiget.Title" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="TextAppearance.Reddiget.Content" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="TextAppearance.Reddiget.Author" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="TextAppearance.Reddiget.CommentCount" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="TextAppearance.Reddiget.Date" parent="TextAppearance.MaterialComponents.Caption" />

</resources>